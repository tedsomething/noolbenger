{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src",
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": false,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "lib/**/*"]
}
